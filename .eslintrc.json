{

    "parser": "babel-eslint",
	"env": {
	    "browser": true,
	    "node": true
	  },

  	"parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true,
            "sourceType": "module",
            "allowImportExportEverywhere": false
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "rules": {
       	"comma-dangle": 0,
    	"no-console": "off",
    	"no-mixed-spaces-and-tabs": [2, "smart-tabs"]
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "16.3.2"
        }
    }
}